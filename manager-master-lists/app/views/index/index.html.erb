<center><h1>Site Map</h1></center>

<center>
<table>
<tr>
  <td valign="top">
    <h2>BANDS</h2>
    <ul>
      <% @bands.each do |band| %>
      <li>
        <p>
          <u><%= link_to band.name, band_path(band) %></u><br>
        </p>
        </li>
      <% end %>
    </ul>
  </td>


  <td valign="top">
    <h2>MANAGERS</h2>
    <ul>
      <% @managers.each do |manager| %>
        <li>
          <p><u><%= link_to manager.full_name, manager_path(manager) %></u><br>
              <%= manager.street %><br>
              <%== "#{manager.apt} <br />"  if manager.apt == " " %>
              <%= manager.city_state_zip %>
              <br>
              <%= mail_to manager.email, name = manager.email %>
            </p>
        </li>
      <% end %>
    </ul>
  </td>

  <td valign="top">
    <h2> BAND MEMBERS </h2>
    <ul>
      <% @band_members.each do |band_member| %>
        <li>
          <p><u><%= link_to band_member.full_name, band_member_path(band_member) %></u><br>
              <b>
                Band: <%= link_to band_member.band.name, band_path(band_member.band) %>
                <br>
                Instrument: <%= band_member.instrument %>
              </b>

              <br>

              <%= band_member.street %><br>
              <%== "#{band_member.apt} <br />"  if band_member.apt == " " %>
              <%= band_member.city_state_zip %>

              <br>

              <%= mail_to band_member.email, name = band_member.email %>
            </p>
          </li>
        <% end %>
      </ul>
    </td>

    <td valign="top">
      <ul>
        <h2> OFFICES </h2>
        <% @offices.each do |office| %>
        <li>
          <p>
            <u><%= link_to office.name, office_path(office) %></u><br>
            <%= office.street %><br>
            <%== "#{office.suite} <br />"  if office.suite == " " %>
            <%= office.city_state_zip %>

            <br>
            <%= office.phone %>
            <br>

            </p>
          </li>
        <% end %>
      </ul>
      </td>
    </tr>
</ul>
</table>
</center>
